<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin_half">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_1"
            android:layout_width="@dimen/list_icon_size"
            android:layout_height="@dimen/list_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/image_splash"
            app:civ_border_color="@color/color_list_icon_border"
            app:civ_border_width="@dimen/list_icon_margin_size" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/image_1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:layout_toEndOf="@id/image_1"
            android:layout_toRightOf="@id/image_1"
            android:gravity="center_vertical"
            tools:text="Douglas" />

        <!--<View-->
            <!--android:id="@+id/divider_1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/list_divider_height"-->
            <!--android:layout_below="@id/image_1"-->
            <!--android:layout_marginBottom="@dimen/activity_vertical_margin_half"-->
            <!--android:layout_marginTop="@dimen/activity_vertical_margin_half"-->
            <!--android:background="@color/color_divider" />-->

        <ImageView
            android:id="@+id/activity_create_post_image_view"
            android:layout_below="@id/text_1"
            android:src="@drawable/image_splash"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="100%"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/activity_vertical_margin_half" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_circle_outline_white_48dp"
            android:layout_alignTop="@id/activity_create_post_image_view"
            android:layout_alignBottom="@id/activity_create_post_image_view"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text_4"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/activity_create_post_image_view"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary"
            android:paddingEnd="@dimen/activity_horizontal_margin_half"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingStart="@dimen/activity_horizontal_margin_half"
            android:textColor="@color/white"
            android:text="Campanha" />

        <TextView
            android:id="@+id/text_3"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_field_height"
            android:layout_below="@id/activity_create_post_image_view"
            android:gravity="start|center_vertical"
            android:padding="@dimen/activity_vertical_margin_half"
            tools:text="Texto"
            android:lines="3"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_100"
            android:layout_below="@id/text_3"/>

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/divider"
            android:src="@drawable/ic_chat_white_24dp"
            android:tint="@color/grey_500"
            android:padding="12dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>